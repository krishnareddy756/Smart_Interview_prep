# Backend Environment Variables
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=your-org-id-here
OPENAI_TIMEOUT=30000
OPENAI_MAX_RETRIES=3

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com
MAX_FILE_SIZE=5242880
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
UPLOAD_RATE_LIMIT_MAX=5
AI_RATE_LIMIT_MAX=10

# Cache Configuration
ENABLE_CACHING=true
CACHE_TTL=300000
QUESTIONS_CACHE_TTL=1800000
ANALYSIS_CACHE_TTL=3600000
CACHE_MAX_SIZE=1000

# File Upload Configuration
UPLOAD_TEMP_DIR=/tmp/uploads
CLEANUP_INTERVAL=3600000

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PATH=/metrics
HEALTH_CHECK_PATH=/health
LOG_LEVEL=info
ENABLE_ACCESS_LOG=true

# Performance Configuration
COMPRESSION_LEVEL=6

# Frontend Environment Variables
VITE_API_URL=http://localhost:5000
VITE_APP_NAME=Smart Interview Prep
VITE_APP_VERSION=1.0.0

# Production Database (if using)
# DATABASE_URL=postgresql://user:password@localhost:5432/interview_prep
# DB_POOL_SIZE=10
# DB_TIMEOUT=30000
# DB_IDLE_TIMEOUT=600000

# Redis Configuration (if using)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your-redis-password

# SSL Configuration (for production)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Monitoring Services (optional)
# SENTRY_DSN=your-sentry-dsn
# NEW_RELIC_LICENSE_KEY=your-newrelic-key